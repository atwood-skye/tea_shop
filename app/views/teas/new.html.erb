<h1>New Tea</h1>

<% if @tea.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @tea.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @tea do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :cost %>
  <%= f.number_field :cost %>
  <%= f.submit  %>
<% end %>
